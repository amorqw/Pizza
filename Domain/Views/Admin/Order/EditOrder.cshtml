@model Core.Dto.Order.OrderDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Order</title>
    <link href="~/css/edit.css" rel="stylesheet" />
</head>
<body>
<header>
    <h1>Edit Order</h1>
    <nav class="admin-menu">
        <a href="/Admin/ManagePizzeria">Manage Pizzerias</a>
        <a href="/Admin/ManagePizzas">Manage Pizzas</a>
        <a href="/Admin/ManagePizzaAvailable">Manage Pizzerias</a>
        <a href="/Admin/ManageStaffs">Manage Staffs</a>
        <a href="/Admin/ManageReview">Manage Reviews</a>
        <a href="/Admin/ManageOrders">Manage Orders</a>
        <a href="/Admin/ManageOrderItems">Manage OrderItems</a>
        <a href="/Admin/ManageUser">Manage Users</a>
    </nav>
</header>

<main>
    <form action="@Url.Action("UpdateOrder", "OrderManage")" method="post">
        <input type="hidden" name="OrderId" value="@Model.OrderId" />
        <div>
            <label for="UserId">UserId:</label>
            <input type="text" id="UserId" name="UserId" value="@Model.UserId" required />
        </div>
        <div>
            <label for="StaffId">StaffId:</label>
            <textarea id="StaffId" name="StaffId" required>@Model.StaffId</textarea>
        </div>
        <div>
            <label for="Status">Status:</label>
            <input type="number" id="Status" name="Status" value="@Model.Status" step="0.01" required />
        </div>
        <div>
            <label for="Address">Address:</label>
            <input type="text" id="Address" name="Address" value="@Model.Address" required />
        </div>
        <div>
            <label for="PaymentMethod">PaymentMethod:</label>
            <select id="PaymentMethod" name="PaymentMethod" required>
                <option value="Card" @(Model.PaymentMethod == "Card" ? "selected" : "")>Card</option>
                <option value="Cash" @(Model.PaymentMethod == "Cash" ? "selected" : "")>Cash</option>
            </select>
        </div>
        <div>
            <label for="Date">Date:</label>
            <input type="text" id="Date" name="Date" value="@Model.Date" required />
        </div>
        <button type="submit" class="btn">Save Changes</button>
    </form>
</main>

<footer>
    <p>:)</p>
</footer>

</body>
</html>