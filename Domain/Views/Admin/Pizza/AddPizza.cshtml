@model Core.Dto.Pizza.PizzaDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Pizza</title>
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
<header>
    <h1>Add New Pizza</h1>
    <nav class="admin-menu">
        <a href="/Admin/ManagePizzas">Manage Pizzas</a>
        <a href="/Admin/ManageIngredients">Manage Ingredients</a>
        <a href="/Admin/ManageUsers">Manage Users</a>
        <a href="/Admin/ManageOrders">Manage Orders</a>
    </nav>
</header>

<main>
    <form action="/Admin/AddPizza" method="post">
        <div>
            <label for="NamePizza">Name:</label>
            @Html.TextBoxFor(m => m.NamePizza, new { @required = "required" })
        </div>
        <div>
            <label for="Description">Description:</label>
            @Html.TextAreaFor(m => m.Description, new { @required = "required" })
        </div>
        <div>
            <label for="Price">Price:</label>
            @Html.TextBoxFor(m => m.Price, new { type = "number", step = "0.01", @required = "required" })
        </div>
        <div>
            <label for="Size">Size:</label>
            @Html.TextBoxFor(m => m.Size, new { @required = "required" })
        </div>
        <div>
            <label for="Available">Available:</label>
            @Html.DropDownListFor(m => m.Available, new SelectList(new[] { true, false }), new { @required = "required" })
        </div>
        <button type="submit" class="btn">Add Pizza</button>
    </form>

</main>

<footer>
    <p>&copy; 2024 Pizza World Admin Panel</p>
</footer>

</body>
</html>