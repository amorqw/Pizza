@model Core.Models.OrderItems

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Order Item</title>
    <link href="~/css/add.css" rel="stylesheet" />
</head>
<body>
<header>
    <h1>Add New Order Item</h1>
    <nav class="admin-menu">
        <a href="/Admin/ManagePizzerias">Manage Pizzerias</a>
        <a href="/Admin/ManagePizzas">Manage Pizzas</a>
        <a href="/Admin/ManagePizzaAvailable">Manage Pizzas Available</a>
        <a href="/Admin/ManageStaffs">Manage Staffs</a>
        <a href="/Admin/ManageReview">Manage Reviews</a>
        <a href="/Admin/ManageOrders">Manage Orders</a>
        <a href="/Admin/ManageOrderItems">Manage OrderItems</a>
        <a href="/Admin/ManageUser">Manage Users</a>
    </nav>
</header>

<main>
    <form action="/Admin/AddOrderItem" method="post">
        <div>
            <label for="OrderId">Order ID:</label>
            <input type="text" id="OrderId" name="OrderId" required />
        </div>
        <div>
            <label for="PizzaId">Pizza ID:</label>
            <input type="text" id="PizzaId" name="PizzaId" required />
        </div>
        <div>
            <label for="Amount">Amount:</label>
            <input type="number" id="Amount" name="Amount" required />
        </div>
        <button type="submit" class="btn">Add Order Item</button>
    </form>
</main>

<footer>
    <p>:)</p>
</footer>

</body>
</html>