@model IEnumerable<Core.Models.OrderItems>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Order Items</title>
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
<header>
    <h1>Manage Order Items</h1>
    <nav class="admin-menu">
        <a href="/Admin/ManagePizzerias">Manage Pizzerias</a>
        <a href="/Admin/ManagePizzas">Manage Pizzas</a>
        <a href="/Admin/ManagePizzaAvailable">Manage Pizzas Available</a>
        <a href="/Admin/ManageStaffs">Manage Staffs</a>
        <a href="/Admin/ManageReview">Manage Reviews</a>
        <a href="/Admin/ManageOrders">Manage Orders</a>
        <a href="/Admin/ManageOrderItems">Manage OrderItems</a>
        <a href="/Admin/ManageUser">Manage Users</a>
    </nav>
</header>

<main>
    <a href="/Admin/AddOrderItem" class="btn">Add New Order Item</a>
    <div class="pizza-cards-container">
        @if (Model != null && Model.Any())
        {
            foreach (var orderItem in Model)
            {
                <div class="pizza-card">
                    <p><strong>Order ID:</strong> @orderItem.OrderId</p>
                    <p><strong>Pizza ID:</strong> @orderItem.PizzaId</p>
                    <p><strong>Amount:</strong> @orderItem.Amount</p>
                    <div class="order-item-actions">
                        <a href="/Admin/EditOrderItem?orderId=@orderItem.OrderId&pizzaId=@orderItem.PizzaId" class="btn">Edit</a>
                        <form action="/Admin/DeleteOrderItem?orderId=@orderItem.OrderId&pizzaId=@orderItem.PizzaId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No order items found.</p>
        }
    </div>
</main>

<footer>
    <p>:)</p>
</footer>

</body>
